{% extends 'base.html.twig' %}
{% block meta %}
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
{% endblock %}

{% block title %}Syquence API{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('stoplight-elements/styles.min.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('stoplight-elements/web-components.min.js') }}"></script>
{% endblock %}

{% block body %}
    <elements-api
        apiDescriptionUrl="{{ asset('bundle.yml') }}"
        router="hash"
        layout="sidebar"
        hideInternal="true" />
{% endblock %}
